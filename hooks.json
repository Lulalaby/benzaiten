[
  {
    "id": "discord",
    "execute-command": "/var/scripts/python.sh",
    "command-working-directory": "/var/scripts",
    "pass-environment-to-command": [
      {
        "source": "payload",
        "name": "object.phid",
        "envname": "PHID"
      },
      {
        "source": "payload",
        "name": "object.type",
        "envname": "PHIDTYPE"
      },
      {
        "source": "payload",
        "name": "triggers.0.phid",
        "envname": "TRIGGER_PHID"
      }
    ],
    "trigger-rule": {
      "or": [
        {
          "match": {
            "type": "regex",
            "regex": ".",
            "parameter": {
              "source": "header",
              "name": "X-Phabricator-Webhook-Signature"
            }
          }
        }
      ]
    }
  }
]
